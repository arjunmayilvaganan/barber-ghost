{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<section class="contact">
  <div class="contact__img">
    <figure class="absolute-bg" style="background-image: url('{{feature_image}}');"></figure>
  </div>
  <div>
    <div class="contact__mast section-padding--half">
      <div class="grid">
        <h2>{{title}}</h2>
      </div>
    </div>

    <div class="section-padding--none">
      <hr class="sep"/>
    </div>

    <div class="contact__form section-padding--half">
      <div class="contact__text">
        {{content}}
      </div>
      <form id="form" class="form" action="https://formspree.io/thomas.vaeth@gmail.com" method="POST">
        <input type="hidden" name="_subject" value="Someone Emailed You. ğŸ’ˆ">
        <div class="form__subcontainer">
          <div class="form__active">
            <label for="form-first-name">First Name</label>
            <input type="text" name="first-name" id="form-first-name" required>
          </div>
          <div class="form__active">
            <label for="form-last-name">Last Name</label>
            <input type="text" name="last-name" id="form-last-name" required>
          </div>
        </div>

        <div class="form__subcontainer">
          <div class="form__active">
            <label for="form-email">E-Mail</label>
            <input type="email" name="email" id="form-email" required>
          </div>

          <div class="form__active">
            <label for="form-company">Company</label>
            <input type="text" name="company" id="form-company">
          </div>
        </div>

        <div class="form__active">
          <label for="form-message">Message</label>
          <textarea name="message" id="form-message" rows="3"></textarea>
        </div>

        <div class="form__submit">
          <div class="form__btn">
            <input type="submit" value="Send">
          </div>
        </div>

        <p class="form__message"></p>
      </form>
    </div>
  </div>
</section>

{{/post}}
